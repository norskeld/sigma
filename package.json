{
  "name": "@nrsk/arc",
  "version": "1.0.0",
  "description": "TypeScript parser combinators.",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.17.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "cz": "git-cz",
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "release": "npx semantic-release",
    "release:dry": "npx semantic-release --dry-run",
    "style:check": "npm run style:format:check && npm run style:lint:check",
    "style:fix": "npm run style:format:fix && npm run style:lint:fix",
    "style:format:check": "prettier --check \"**/*.{js,ts,json}\"",
    "style:format:fix": "prettier --write \"**/*.{js,ts,json}\"",
    "style:lint:check": "eslint --ext .js,.ts .",
    "style:lint:fix": "eslint --fix --ext .js,.ts .",
    "test": "jest",
    "test:coverage": "jest --coverage=true",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/norskeld/arc.git"
  },
  "keywords": [
    "typescript",
    "parser-combinators",
    "parser",
    "combinators",
    "parsec"
  ],
  "author": {
    "name": "Vladislav Mamon",
    "email": "hello@vm.codes"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/norskeld/arc/issues"
  },
  "homepage": "https://github.com/norskeld/arc#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.19",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "jest": "^27.2.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^18.0.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
