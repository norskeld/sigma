{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "bnf",
  "scopeName": "source.bnf",
  "aliases": ["ebnf"],
  "patterns": [
    { "include": "#comment" },
    { "include": "#rule" },
    { "include": "#indented-symbols" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.block.bnf",
          "begin": "\\(\\*",
          "end": "\\*\\)",
          "patterns": [
            {
              "include": "#comment-tags"
            }
          ]
        },
        {
          "name": "comment.line.bnf",
          "begin": "#",
          "end": "$",
          "patterns": [
            {
              "include": "#comment-tags"
            }
          ]
        }
      ]
    },
    "comment-tags": {
      "patterns": [
        {
          "name": "keyword.codetag.bnf",
          "match": "\\b(?:TODO|FIXME|BUG|NOTE|HACK)\\b"
        }
      ]
    },
    "rule": {
      "patterns": [
        {
          "match": "([\\w\\-]+)\\s*(::=|=)\\s*(.+)?",
          "captures": {
            "1": {
              "name": "entity.name.class.bnf"
            },
            "2": {
              "name": "keyword.symbol.bnf"
            },
            "3": {
              "patterns": [
                {
                  "include": "#symbols"
                }
              ]
            }
          }
        }
      ]
    },
    "symbols": {
      "patterns": [
        { "include": "#comment" },
        { "include": "#string" },
        { "include": "#symbol" },
        { "include": "#operators" }
      ]
    },
    "indented-symbols": {
      "patterns": [{ "include": "#symbols" }]
    },
    "symbol": {
      "patterns": [
        {
          "match": "\\b[A-Z][_A-Z0-9]*\\b",
          "name": "support.variable.bnf"
        },
        {
          "match": "\\b[_a-zA-Z][_a-zA-Z0-9]*\\b",
          "name": "entity.name.class.bnf"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.single.bnf",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.bnf",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.bnf",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.bnf",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "match": "[?+*|()\\[\\]{},.\\-!]",
          "name": "keyword.control.bnf"
        },
        {
          "match": ";",
          "name": "keyword.symbol.bnf"
        }
      ]
    }
  }
}
